<Window x:Class="VideoPlayer.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" 
        Height="200" 
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#282c34"
        WindowStyle="None"
        AllowsTransparency="True">
    <Window.Resources>
        <FontFamily x:Key="UIFont">pack://application:,,,/Fonts/#Fira Code Retina</FontFamily>
        
        <!-- Style for TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource UIFont}"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
        </Style>
        
        <!-- Style for Button -->
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource UIFont}"/>
            <Setter Property="Background" Value="#21252b"/>
            <Setter Property="Foreground" Value="#DCDCDC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2c313a"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1d1f23"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Border BorderThickness="1" BorderBrush="#1d1f23">
        <Grid>
            <!-- Title Bar -->
            <Grid Height="32" VerticalAlignment="Top" Background="#21252b">
                <TextBlock x:Name="TitleText" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Button Content="Ã—" Width="45" Height="32" 
                        HorizontalAlignment="Right" 
                        Click="CloseButton_Click"/>
            </Grid>

            <!-- Content -->
            <Grid Margin="20,42,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Message -->
                <TextBlock x:Name="MessageText" 
                         TextWrapping="Wrap" 
                         VerticalAlignment="Center"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="1" 
                          Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="0,20,0,0">
                    <Button x:Name="OkButton" 
                            Content="OK" 
                            Width="75" 
                            Click="OkButton_Click" 
                            Margin="0,0,10,0"/>
                    <Button x:Name="CancelButton" 
                            Content="Cancel" 
                            Width="75" 
                            Click="CancelButton_Click" 
                            Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window> 